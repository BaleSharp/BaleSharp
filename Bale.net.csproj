<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- NuGet Package Metadata -->
		<PackageId>BaleSharp</PackageId>
		<Version>1.5.9-Beta</Version>
		<Authors>CodeWizaard</Authors>
		<Company>Aladdin Team</Company>
		<PackageDescription>a up to date and good package for making bots in Bale messager</PackageDescription>
		<PackageTags>json;bots;telegram;messager;bale;BaleBot;BaleSharp;csharp;api;webservice</PackageTags>
		<PackageProjectUrl>https://github.com/Code-Wizaard/BaleSharp</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Code-Wizaard/BaleSharp.git</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageIcon>icon.png</PackageIcon>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Copyright>Copyright © CodeWizaard 2025</Copyright>
		<Title>BaleSharp</Title>
		<Description>BaleSharp is the best and most popular package for making bots in bale messager with C#
with a easy syntax and perfect options.</Description>
		<PackageReleaseNotes>
			1. Fixed Deserialize Error
			2. Added SendPhoto
			3. Added SendLocation
			4. Added SendVideo
			5. Added SendDocument
			6. Added OnPhoto
		</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<None Include="icon.png" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
